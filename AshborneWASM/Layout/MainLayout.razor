        </svg>
    </button>
    <SettingsModal IsOpen="@settingsOpen" IsOpenChanged="OnSettingsChanged" />
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    bool settingsOpen = false;

    void ToggleSettings()
    {
        settingsOpen = !settingsOpen;
        OutputConstants.Paused = settingsOpen;
    }

    void OnSettingsChanged(bool open)
    {
        settingsOpen = open;
        OutputConstants.Paused = open;
    }
}
