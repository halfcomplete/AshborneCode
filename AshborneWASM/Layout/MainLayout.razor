
@inherits LayoutComponentBase
@using AshborneGame._Core.Globals.Constants
@using AshborneWASM.Layout

<div class="page">
    <button class="settings-btn" @onclick="ToggleSettings" title="Settings">
        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#bfae8e" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="3" />
